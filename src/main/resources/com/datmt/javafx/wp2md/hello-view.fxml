<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="600.0" minWidth="960.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.datmt.javafx.wp2md.AppController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="WordPress markup to Markdown conversion">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label text="WP markup content" />
            <TextArea fx:id="wpSource" prefHeight="200.0" prefWidth="200.0" />
            <Label text="MD" />
            <TextArea fx:id="mdSource" prefHeight="200.0" prefWidth="200.0" />
            <Button mnemonicParsing="false" onAction="#onConvert" text="Convert" />
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
   </padding>
</BorderPane>
